- type: replace
  path: /releases/-
  value:
    name: credhub
    version: "1.6.5"
    url: https://s3.amazonaws.com/bosh-compiled-release-tarballs/credhub-1.6.5-ubuntu-trusty-3468.21-20180125-030538-607642349-20180125030546.tgz?versionId=gziq7vXd9d1itJRNqeIn0kFlWHVhTyjL
    sha1: b8500dad276022ebfc4186f34c24e3337f9dbc41

# Add CredHub job
- type: replace
  path: /instance_groups/name=credhub?/jobs?/-
  value:
    name: credhub
    release: credhub
    properties:
      credhub:
        authentication:
          uaa:
            url: "https://((lb_ip)):8443"
            ca_certs:
            - ((concourse_ssl.ca))
            verification_key: ((uaa_jwt_signing_key.public_key))
        data_storage:
          type: postgres
          host: 127.0.0.1
          port: 5432
          username: credhub
          password: ((credhub_db_password))
          database: credhub
          require_tls: false
        tls: ((concourse_ssl))
        encryption:
          providers:
          - name: internal
            type: internal
          keys:
          - provider_name: internal
            encryption_password: ((credhub_encryption_password))
            active: true